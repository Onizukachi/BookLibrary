<div id="<%= dom_id order %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Email:</strong>
    <%= order.email %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Fulfilled:</strong>
    <%= order.fulfilled %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Total:</strong>
    <%= order.total %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Address:</strong>
    <%= order.address %>
  </p>
  <% if order.order_products.exists? %>
    <p class="my-5">
      <strong class="block font-medium mb-1">Products:</strong>
      <% order.order_products.each do |order_product| %>
        <%= order_product.product.name %>
        <%= order_product.size %>
        <%= order_product.quantity %>
      <% end %>
    </p>
  <% end %>
</div>
